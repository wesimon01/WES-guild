<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>

<body style="background-color: seagreen">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DVD_LIBRARY", "Index", "DVD", new { area = "" }, new { @class = "list-group-item" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>

                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">LIBRARY OPTIONS<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add a DVD", "DVDadd", "DVD")</li>
                            <li>@Html.ActionLink("Remove a DVD", "DVDremove", "DVD")</li>
                            <li>@Html.ActionLink("List DVDs", "DVDlist", "DVD")</li>
                            <li>@Html.ActionLink("DVD Information", "DVDdisplay", "DVD")</li>
                            <li>@Html.ActionLink("Search for DVD", "DVDsearch", "DVD")</li>  
                            <li>@Html.ActionLink("Borrower History", "DVDhistory", "DVD")</li>  
                        </ul>
                    </li>
                </ul>
                
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <br /><br /><br /><br /><br /><br /> <br /><br /><br /><br /><br /><br />
        <hr />
        <div class="row" style="padding-left:80px">
            <div class="col-xs-12">&copy; @DateTime.Now.Year - SG MEDIA</div>
        </div>
        <hr />
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
