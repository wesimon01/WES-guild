@model SGCorpHRportal.Models.ViewModels.TimeEntryVM

@{
    ViewBag.Title = "EmployeeSubmitTime";
}

@using (Html.BeginForm("EmployeeSubmitTime", "TimeEntry", FormMethod.Post))
{
        @Html.ValidationSummary(true)
    <div class="col-xs-12 col-sm-9 panel panel-primary">
        <div class="row">
            <div class="col-xs-12 panel-heading">
                <h4>Employee Time Entry</h4>
                <br />
                <div class="form-group">
                    <label class="panel-heading">List of Employees :</label>
                    <div class="panel-body">
                        @Html.DropDownListFor(m => m.selectedEmployeeId, Model.EmployeeItems, "-Choose An Employee-", new { @class = "form-control" })                        
                    </div>
                </div>
            </div>
        </div>

        <div class="row">         
                <div class="form-group">
                    <div class="">
                        <label class="panel-heading">Day Worked :</label>
                    </div>
                    <div class="panel-body">
                        @Html.EditorFor(m => m.timeEntry.dateTime, new { htmlAttributes = new { id = "datepicker" } })
                        @Html.ValidationMessageFor(m => m.timeEntry.dateTime)
                    </div>
                </div>    
        </div>
        <br /><br />

        <div class="row">
            <div class="form-group">
                <label class="panel-heading">Hours Worked :</label> 
                <div class="panel-body">
                    @Html.EditorFor(m => m.timeEntry.HoursWorked, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                    @Html.ValidationMessageFor(m => m.timeEntry.HoursWorked)
                </div>
            </div>         
        <button type="submit" class="btn btn-primary" style="margin-left:80px">Save</button>
    </div>
<br />
</div>
}

@section Scripts{

   <script type="text/javascript">

    $(document).ready(function () {
        $("#datepicker").datepicker();
  } );
   </script>
}
