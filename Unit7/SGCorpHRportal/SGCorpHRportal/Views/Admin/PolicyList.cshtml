@model IEnumerable<SGCorpHRportal.Models.Policy>

@{
    ViewBag.Title = "PolicyList";
}

<div class="col-xs-12 col-sm-9">
    <div class="row">
        <div class="col-xs-12">
            <h3>Policy List</h3>
            </div>
        </div>
            <div class="row">
               @Html.ActionLink("Add Policy", "PolicyAdd", "Admin", null, new { @class = "btn btn-primary" })
            </div>
            <br/>
            
                <label> Select Policy Category:</label>

    <div class="row">
        <div class="col-xs-12">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories<span class="caret"></span></a>
            <ul class="btn btn-primary dropdown-menu">
                <li>Select A Category</li>
                <li><a href="/Admin/PolicyList?CategoryName=ShockAndAwe">ShockAndAwe</a></li>
                <li><a href="/Admin/PolicyList?CategoryName=Goat">Goat</a></li>
                <li><a href="/Admin/PolicyList?CategoryName=SeverancePackages">SeverancePackages</a></li>
            </ul>
        </div>
    </div>
            <br /><br /><br /><br /><br />
   
     <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Policy</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var policy in Model)
                {
                    <tr>
                        <td>@policy.PolicyName</td>
                        <td>@policy.Category.CategoryName</td>
                        <td>
                            @Html.ActionLink("Open", "PolicyContent", "Admin", new { id = "PolicyId", policy.PolicyId }
                                        , new { @class = "btn btn-primary" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
