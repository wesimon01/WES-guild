@model Exercises.Models.Data.Course

    @{
        ViewBag.Title = "AddCourse";
    }

    <div class="row">
        <div class="col-xs-12">
            <h3>Add Course</h3>
            @Html.ActionLink("Return to Course List", "GetCourses", "Admin")
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label>Course</label>
                    @Html.TextBoxFor(c => c.CourseName, new {@class = "form-control", placeholder = ""})
                </div>
                @Html.Hidden("courseName", Model.CourseName)
                <button type="submit" class="btn btn-sm btn-primary">Save</button>
            }
        </div>
    </div>
