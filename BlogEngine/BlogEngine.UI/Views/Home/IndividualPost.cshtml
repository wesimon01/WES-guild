@model BlogEngine.Models.Blogpost

@{
    ViewBag.Title = Model.Title;
}

<div class="row">
    <div class="col-lg-8">

<h2>@Model.Title</h2>
<p><span class="glyphicon glyphicon-time"></span>Date Published: @Model.datePublished.ToString("MM/dd/yyyy")</p>
<p>Written by @Model.Author.AuthorName</p>

@Html.Raw(Model.Content)
    </div>
    <div class="col-lg-4">
        @{Html.RenderAction("SidePanel", "Home", new List<BlogEngine.Models.Hashtag>()); }
    </div>
</div>
<hr />
<div id="disqus_thread"></div>

